{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "aratavietnam/aratavietnam-theme",
    "description": "Custom WordPress theme for Arata Vietnam website built with Tailwind CSS.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Arata Vietnam Team",
            "email": "info@aratavietnam.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "AraVietnam\\": "src/"
        }
    },
    "require": {
        "php": ">=8.0.2",
        "tailpress/framework": "^5.0.4",
        "automattic/jetpack-autoloader": "^2.10"
    },
    "require-dev": {
        "tailpress/cli": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "automattic/jetpack-autoloader": true
        }
    }
}
